#!/bin/bash

BASE_DIR=$(dirname $(readlink -f "$0"))
SOURCE_DIR="$BASE_DIR/../../Source/"
WEBKIT_OUTPUTDIR="$BASE_DIR/../../Output/HBD/"

# LD_LIBRARY_PATH
export LD_LIBRARY_PATH=$WEBKIT_OUTPUTDIR/Root/lib/:$LD_LIBRARY_PATH 

# MiniGUI.cfg
export MG_CFG_PATH=$WEBKIT_OUTPUTDIR/Root/etc/

# mgncs.cfg
export NCS_CFG_PATH=$WEBKIT_OUTPUTDIR/Root/etc/

export PATH=$WEBKIT_OUTPUTDIR/Root/libexec/:$PATH

# Modify MiniGUI.cfg 
MG_CFG_FILE=$MG_CFG_PATH/MiniGUI.cfg
sed -i -e "s:exec_file=.*:exec_file=$WEBKIT_OUTPUTDIR/Root/bin/gvfb:g" -e "s:cursorpath=.*:cursorpath=$WEBKIT_OUTPUTDIR/Root/share/minigui/res/cursor/:g" -e "s:respath=.*:respath=$WEBKIT_OUTPUTDIR/Root/share/minigui/res/:g"  $MG_CFG_FILE

# MiniBrowser
$WEBKIT_OUTPUTDIR/Root/libexec/webkit2hbd-1.0/MiniBrowser 
